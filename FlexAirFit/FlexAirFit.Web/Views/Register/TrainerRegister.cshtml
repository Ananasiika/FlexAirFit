@model FlexAirFit.Web.Models.TrainerModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Gender" class="control-label"></label>
    <select asp-for="Gender" class="form-control">
        <option value="">-- Выберите пол --</option>
        <option value="male">Мужской</option>
        <option value="female">Женский</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Specialization" class="control-label"></label>
    <input asp-for="Specialization" class="form-control" />
    <span asp-validation-for="Specialization" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Experience" class="control-label"></label>
    <input asp-for="Experience" class="form-control" />
    <span asp-validation-for="Experience" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Rating" class="control-label"></label>
    <input asp-for="Rating" class="form-control" />
    <span asp-validation-for="Rating" class="text-danger"></span>
</div>
