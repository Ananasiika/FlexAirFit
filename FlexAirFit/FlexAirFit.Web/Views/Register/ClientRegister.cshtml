@model FlexAirFit.Web.Models.ClientModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Gender" class="control-label"></label>
    <select asp-for="Gender" class="form-control">
        <option value="">-- Выберите пол --</option>
        <option value="male">Мужской</option>
        <option value="female">Женский</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DateOfBirth" class="control-label"></label>
    <input asp-for="DateOfBirth" class="form-control" type="date" name="ClientDateOfBirth" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>
<div class="form-group">
    <label for="MembershipId" class="control-label">Идентификатор абонемента</label>
    <input name="MembershipId" class="form-control" />
</div>
