@model FlexAirFit.Web.Models.WorkoutModel

<h1>Редактирование тренировки</h1>

<form asp-action="EditWorkout" asp-controller="Workout" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Название тренировки</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание тренировки</label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdTrainer">Id тренера</label>
        <input asp-for="IdTrainer" class="form-control" value="@Model.IdTrainer" />
        <span asp-validation-for="IdTrainer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NameTrainer">Имя тренера</label>
        <input asp-for="NameTrainer" class="form-control" value="@Model.NameTrainer" readonly />
        <span asp-validation-for="NameTrainer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration">Длительность тренировки (в минутах)</label>
        <input asp-for="Duration" class="form-control" value="@Model.Duration" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Level">Уровень сложности тренировки</label>
        <input asp-for="Level" class="form-control" value="@Model.Level" />
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>
    <input type="submit" value="Сохранить" class="btn btn-primary" />
</form>