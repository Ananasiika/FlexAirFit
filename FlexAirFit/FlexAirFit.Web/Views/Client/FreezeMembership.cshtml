@model FlexAirFit.Web.Models.FreezingModel
<h2>Заморозка абонемента</h2>

<form asp-action="FreezeSubscription" asp-controller="Client" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FreezeStart" class="control-label">Дата начала заморозки</label>
        <input asp-for="FreezeStart" class="form-control" type="date" required />
        <span asp-validation-for="FreezeStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FreezeDuration" class="control-label">Длительность заморозки (в днях)</label>
        <input asp-for="FreezeDuration" class="form-control" type="number" required />
        <span asp-validation-for="FreezeDuration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Заморозить" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Information" asp-controller="Client" class="btn btn-secondary">Отмена</a>
</div>
