@model FlexAirFit.Web.Models.ClientModel

<h1>Редактирование клиента</h1>

<form asp-action="EditClient" asp-controller="Client" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Имя клиента</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender">Пол клиента</label>
        <select asp-for="Gender" class="form-control">
            <option value="male">Мужской</option>
            <option value="female">Женский</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth">Дата рождения клиента</label>
        <input asp-for="DateOfBirth" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <input type="submit" value="Сохранить" class="btn btn-primary" />
    <a asp-action="FreezeMembershipByAdmin" asp-route-clientId="@Model.Id" class="btn btn-warning">Заморозить абонемент</a>
</form>
