@model FlexAirFit.Web.Models.TrainerModel

<h1>Редактирование тренера</h1>

<form asp-action="EditTrainer" asp-controller="Trainer" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Имя тренера</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender">Пол тренера</label>
        <select asp-for="Gender" class="form-control">
            <option value="male">Мужской</option>
            <option value="female">Женский</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialization">Специализация тренера</label>
        <input asp-for="Specialization" class="form-control" value="@Model.Specialization" />
        <span asp-validation-for="Specialization" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Experience">Опыт тренера (в годах)</label>
        <input asp-for="Experience" class="form-control" value="@Model.Experience" />
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Рейтинг тренера</label>
        <input asp-for="Rating" class="form-control" value="@Model.Rating" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <input type="submit" value="Сохранить" class="btn btn-primary" />
</form>