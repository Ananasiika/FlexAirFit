@model FlexAirFit.Web.Models.TrainerModel

<h2>Редактирование данных клиента</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveChanges" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 col-lg-2">
                <label asp-for="Gender" class="sr-only">Пол</label>
                <select asp-for="Gender"
                        class="form-control form-control-sm"
                        asp-items="@(new SelectList(new[] { "male", "female" }, Model.Gender ?? ""))">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Information" asp-controller="Trainer" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>